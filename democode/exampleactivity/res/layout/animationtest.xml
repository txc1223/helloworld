<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/anim_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/anim_btn01"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="alpha animation" />

    <Button
        android:id="@+id/anim_btn02"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="scale animation" />

    <Button
        android:id="@+id/anim_btn03"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="translate animation" />

    <Button
        android:id="@+id/anim_btn04"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="rotate animation" />
      <Button
        android:id="@+id/anim_btn05"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="group animation" />
      <Button
        android:id="@+id/anim_btn06"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="group2 animation" />

    
</LinearLayout>