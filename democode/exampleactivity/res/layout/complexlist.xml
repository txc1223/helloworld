    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TableRow>

        <ImageView
            android:id="@+id/img"
            android:layout_width="50px"
            android:layout_height="35px" />

        <TextView
            android:id="@+id/text1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </TableRow>

    <TableRow>

        <TextView
            android:id="@+id/text2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </TableRow>

</TableLayout>